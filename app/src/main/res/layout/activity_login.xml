<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/conteudoFragmentLogin"
    android:background="@color/paleta_azul_3"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/d_logo_original" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="center"
            android:background="@color/paleta_azul_1"
            android:isScrollContainer="false"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edtEmail"
                android:background="@drawable/d_border_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:maxLength="30"
                android:maxLines="1"
                android:gravity="center"
                android:ems="10"
                android:hint="Digite a matrÃ­cula"
                android:inputType="number"
                android:textColor="@android:color/black"  />

            <EditText
                android:id="@+id/edtSenha"
                android:background="@drawable/d_border_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:maxLength="10"
                android:maxLines="1"
                android:ems="10"
                android:hint="Digite a senha"
                android:inputType="textPassword"
                android:textAlignment="center"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/txtLogarVisitante"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:onClick="Cadastrar"
                android:text="Entrar como visitante"
                android:textAlignment="center"
                android:textColor="@android:color/white" />

        </LinearLayout>


        <Button
            android:id="@+id/btnLogar"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="bottom|right"
            android:background="@drawable/d_key" />

    </FrameLayout>


</LinearLayout>
    <ImageView
        android:id="@+id/txtModificarSenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:src="@drawable/d_config"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"/>

    <ImageView
        android:id="@+id/btnLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:src="@drawable/d_lampada"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"/>
</FrameLayout>