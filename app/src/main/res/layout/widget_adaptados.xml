<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10mm"
        android:orientation="horizontal">

        <ImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/imagemAdaptados"
            android:padding="7dp"
            android:layout_width="10mm"
            android:layout_height="10mm"
            android:layout_gravity="center"
            app:srcCompat="@android:drawable/sym_def_app_icon" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nomeAdaptados"
                    android:layout_width="match_parent"
                    android:layout_height="6mm"
                    android:layout_weight="1"
                    android:gravity="bottom|left"
                    android:maxLines="1"
                    android:text="Nome sobrenome"
                    android:textSize="23sp" />

                <TextView
                    android:id="@+id/codigocarroAdaptado"
                    android:layout_width="match_parent"
                    android:layout_height="3mm"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:text="conver aqui ou assunto nesse max"
                    android:textSize="13sp" />
            </LinearLayout>
            <ImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/imagemcarroAdaptado"
                android:padding="7dp"
                android:layout_width="10mm"
                android:layout_height="10mm"
                android:layout_gravity="center"
                app:srcCompat="@android:drawable/sym_def_app_icon" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>