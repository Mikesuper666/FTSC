<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:id="@+id/corpoAdaptadoConsulta"
    android:gravity="center_vertical">


    <LinearLayout
        android:id="@+id/corpoAdaptadoConsulta2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@color/paleta_azul_4"
        android:elevation="5dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:text="Dados deste veículo!" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorBranco"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_margin="5dp"
                android:id="@+id/fragConsultaAdaptadoCodigo"
                android:layout_width="0dp"
                android:layout_weight="0.4            "
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:text="7070"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorBranco"/>

            <TextView
                android:layout_margin="5dp"
                android:id="@+id/fragConsultaAdaptadoTipoCarro"
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:text="Tipo"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorBranco"/>
            <ImageView
                android:id="@+id/fragConsultaAdaptadoImagemAdaptado"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="0.2"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorBranco"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textAlignment="center"
            android:layout_margin="5dp"
            android:text="Observações" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorBranco"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

         <ImageView
             android:id="@+id/fragConsultaTipoCarroAdaptados"
             android:layout_margin="2dp"
             android:layout_width="100dp"
             android:layout_height="100dp"
             android:background="@drawable/d_4portas"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorBranco"/>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="2dp"
            android:background="@color/colorBranco"
            android:id="@+id/consultaListaAdaptados"
            android:divider="@null"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorBranco"/>

        <ImageView
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="bottom|right"
            android:id="@+id/btnConsultaAdaptados"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/d_arrow2"/>
    </LinearLayout>
</LinearLayout>
